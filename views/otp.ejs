<%- include('partials/top') %>
<form class="card card-lg" action="/otp" method="post" aria-describedby="otp-help">
  <h2>Step 4 of 5 â€” One-Time Password (OTP)</h2>
  <p id="otp-help">We have generated a 6-digit OTP and sent it to your device (simulation). Please enter it below.</p>

  <% if (typeof info !== 'undefined' && info) { %><div class="note"><%= info %></div><% } %>
  <% if (typeof error !== 'undefined' && error) { %><div class="alert" role="alert"><%= error %></div><% } %>

  <div class="form-row">
    <label for="otp">Enter OTP</label>
    <input id="otp" name="otp" type="text" inputmode="numeric" pattern="\d{6}" maxlength="6" required aria-required="true"/>
  </div>

  <div class="actions">
    <a class="btn-secondary" href="/biometric">Previous</a>
    <button class="btn-primary" type="submit">Verify</button>
  </div>

  <p class="hint">Having trouble? <a href="/otp/resend">Resend OTP</a></p>
</form>
<%- include('partials/bottom') %>